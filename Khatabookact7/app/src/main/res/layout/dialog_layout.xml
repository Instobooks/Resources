<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/searchbckgrouond">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        >
        <EditText
            android:id="@+id/etAmt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/searchbckgrouond"
            android:paddingLeft="7dp"
            android:paddingRight="5dp"
            android:inputType="numberSigned"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:hint="Enter Amount ..."
            android:textSize="25sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnGave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/btnred"
                android:text="₹ You Gave"
                android:elevation="20dp"
                android:shadowColor="@color/cardview_light_background"

                />
            <Button
                android:id="@+id/btnReceived"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/btngreen"
                android:text="₹ You Received"
                android:elevation="20dp"
                android:shadowColor="@color/cardview_light_background"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

